<h1>ジャンル</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>アマゾン</th>
      <th>楽天</th>
      <th>tsutaya</th>
      <th>HonyaClub</th>
      <th>ローチケHMV</th>
      <th>yahooショッピング</th>
      <th>セブンネットショッピング</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.keyword_amazon %></td>
        <td><%= genre.keyword_rakuten %></td>
        <td><%= genre.keyword_tsutaya %></td>  
        <td><%= genre.keyword_honyaclub %></td>  
        <td><%= genre.keyword_routike %></td>  
        <td><%= genre.keyword_yahoo %></td>  
        <td><%= genre.keyword_seven %></td>                
        <td><%= link_to '詳細', genre %></td>
        <td><%= link_to '変更', edit_genre_path(genre) %></td>
        <td><%= link_to '削除', genre, method: :delete, data: { confirm: '本当によろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

