<p style = "color: red;"><%= @error %></p>

  <%= form_tag action: :auth do %>  

    <div align="left" style="position: absolute; left: 20; top: 50px;">
    <%= image_tag 'kodomo.png' %><br>

    <div class = "field">
      <%= label_tag :account, 'アカウント' %>
      <%= text_field_tag :account, '', autocomplete: 'off'  %>
    </div>
  
    <div class = "field">
      <%= label_tag :account, 'パスワード' %>
      <%= password_field_tag :password, '', autocomplete: 'off'  %> 
      <script>
        function checkPassword(e) {
          pass = document.getElementById("password");
          if (e.checked) {
              pass.setAttribute("type", "text");
          } else {
              pass.setAttribute("type", "password");
          }
      }
      </script>
      <input type="checkbox" onclick="checkPassword(this)" />
    </div>

    <%# ログイン後にリダイレクトすべきアクションを隠しフィールドにセット %>
    <%= hidden_field_tag :referer, flash[:referer] %>
    <div class = "actions">
      <%= submit_tag 'ログイン' %>
    </div>


      <% end %>
      
      <%= link_to 'ユーザー登録', users_path %>