<p id="notice"><%= notice %></p>

<h1>ユーザー</h1>

<table>
  <thead>
    <tr>
      <th>プロフィール画像</th>   
      <th>名前</th>
      <th>アカウント名</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag show_image_user_path(user), :width => 100 %></td>
        <td><%= user.name %></td>        
        <td><%= user.account %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '変更', edit_user_path(user), data: {"turbolinks" => false} %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

