<!DOCTYPE html>
<html>
  <head>
    <title>Chroma</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    
    </head>

  <% 
  case controller.controller_name 
  
  when "stourokus"
    if params[:genre_id].present?
    case Genre.find(params[:genre_id]).name
    when "CD"
      @erasercolor = @color = "#efffff"
      @pen = 'cd.png'
    when "DVD"
      @erasercolor = @color = "#efffef"
      @pen = 'dvd.png' 
    when "本"
      @erasercolor = @color = "#ffffef" 
      @pen = 'hon.png'
    end
    else
      @erasercolor = @color = "#ffefff"
      @pen = 'newtouroku.png'
    end
  when "mtourokus" 
    @erasercolor = @color = "#fff4ea"
    @pen = 'memo.png'
  else 
    @erasercolor = @color = "#ffffff" 
    @pen = 'toumei.png'
  end
  %>

  <body style="background-color: <%= @color %>;">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">  
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="z-index:9999;">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </button>

      <p style= "position: relative; z-index:9999;">
        <a class="navbar-brand" href="/"><font face="ふぁんしーはーと" font size=6><font color="red">C</font><font color="#9932cc">h</font><font color="blue">r</font><font color="green">o</font><font color="yellow">m</font><font color="orange">a</font></font></a>
      </p>
      
      <div style="position: absolute; right: 0; top: 0;">
        <%= image_tag(@pen,class:'navbar-logo') %> 
      </div>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
          <li><%= link_to '商品登録', stourokus_path %></li> 
          <li><%= link_to 'ジャンル', genres_path %></li>
          <li><%= link_to 'メモ登録', mtourokus_path %></li> 
          <li><%= link_to 'ユーザー登録', users_path %></li> 
          <li><%= link_to '予約', yoyakus_path %></li> 
          <li><%= link_to 'ジャンルキーワード', genrekeywords_path %></li> 
      </ul>
    </div> 
  </div>
  </nav>

    <% if @usr.present? %>
      <%= @usr.name %>
        <!-- <div align="right"> -->
        <div align="right" style="position: absolute; right: 0; top: 75px;">
         <%= link_to image_tag('logout.png', class:'logout',style:"background-color:#{@erasercolor}"), login_logoff_path %><br>
        </div>
     <% end %> 

    <div class="container-fluid">
      <%= yield %>
    </div>
    <br>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
    <!-- <%= link_to 'ホーム(仮)に戻る', home_kari_path %> -->
    <div align="left" style=" left: 0; top: 300px">    
    <%= link_to image_tag('top.png', class:'top'), home_kari_path %><br>    
    </div>
    <footer>
    <div class="container-fluid"><font size = 1>
      Izusho Girls 2017
    </font></div>
  </footer>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </body>

</html>
